extends ./_layouts/_layout-page.pug

block vars
    - var title = 'Showcase'
    - var description = 'Find here some of the best static sites built using MMPilot'

block page-content
    .section-large
      ul
        each val in data.showcase
          li= val
    .section
      p.text-center While you wait, check out this site itself which has been built using MMPilot.
      p.text-center Want to submit a site to showcase? <a href="http://kunruchcreations.com/about-us/contact/" target="_blank">Get in touch</a>

extends ./_layout-root.pug

block header
  header.header
    .container
      .header-left
        a(href='/').site-branding
          h1.title MMPilot
      .menu-toggle
        input(type="checkbox")#menu-toggle
        label(for="menu-toggle").header-right
          span.css-icon-hamburger
            span Toggle
          span Menu
        .menu-toggle-content
          +menu(data.menu.main, 'menu')
          .header-right
            +social(data.menu.social)

block content
  != page.content

block footer
  footer.footer
    .container-content.section-large.text-center
      div.thumbnail-medium.aligncenter
        include ./../_includes/icons/_mmpilot.svg
      p Built with <a href="#{site.url}">MMPilot</a> for the modern web by <a href="http://kunruchcreations.com/">KunRuch Creations</a>.
        br
        | Licensed under the <a href="https://github.com/kunruch/mmpilot/blob/master/LICENSE.md" target="blank">MIT License</a>.
      div                
        +social(data.menu.social)
{
  "name": "mmpilot",
  "version": "0.6.6",
  "description": "A minimal modern static site generator",
  "bin": {
    "mmpilot": "./bin/mmpilot.js"
  },
  "scripts": {
    "clean": "mmpilot clean",
    "build": "mmpilot build",
    "serve": "mmpilot serve",
    "dev-build": "mmpilot build -d",
    "dev-watch": "mmpilot watch -d",
    "dev": "npm-run-all clean dev-build --parallel dev-watch serve",
    "prod": "npm-run-all clean build serve",
    "deploy": "npm-run-all clean build && mmpilot deploy",
    "dist-patch": "npm version patch -m \"Version %s\" && git push && git push --tags && npm publish",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kunruch/mmpilot.git"
  },
  "keywords": [
    "blog",
    "cms",
    "mmpilot",
    "site",
    "static",
    "webapp",
    "website"
  ],
  "author": "Kanishk Kunal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kunruch/mmpilot/issues"
  },
  "homepage": "https://mmpilot.kunruchcreations.com",
  "dependencies": {
    "autoprefixer": "^7.2.5",
    "browser-sync": "^2.23.5",
    "browserify": "^15.2.0",
    "chokidar": "^2.0.0",
    "commander": "^2.13.0",
    "connect-logger": "0.0.1",
    "dateformat": "^3.0.2",
    "envify": "^4.1.0",
    "front-matter": "^2.3.0",
    "gh-pages": "^1.1.0",
    "js-yaml": "^3.10.0",
    "loadash": "^1.0.0",
    "marked": "^4.0.10",
    "node-sass": "^4.7.2",
    "postcss": "^6.0.16",
    "pug": "^2.0.0-rc.4",
    "require-from-string": "^2.0.1",
    "rss": "^1.2.2",
    "shelljs": "^0.8.1",
    "sitemap": "^1.13.0",
    "striptags": "^3.1.1",
    "uglifyify": "^4.0.5",
    "watchify": "^3.9.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "eslint": "^4.16.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "mmcss": "^0.3.3",
    "npm-run-all": "^4.1.2"
  }
}

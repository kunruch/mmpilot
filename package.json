{
  "name": "mmpilot",
  "version": "0.1.3",
  "description": "A minimal modern static site generator",
  "main": "bin/mmpilot.js",
  "bin": {
    "mmpilot": "./bin/mmpilot.js"
  },
  "scripts": {
    "dev-build": "mmpilot clean && mmpilot build -c _mmpilot.yml,_mmpilot-dev.yml",
    "dev-watch": "mmpilot watch -c _mmpilot.yml,_mmpilot-dev.yml",
    "clean": "mmpilot clean",
    "build": "mmpilot build",
    "serve": "mmpilot serve",
    "dev": "npm-run-all dev-build --parallel dev-watch serve",
    "deploy": "npm run clean && npm run build && mmpilot deploy",
    "dist-patch": "npm version patch -m \"Version %s\" && git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kunruch/mmpilot.git"
  },
  "keywords": [
    "blog",
    "website",
    "cms"
  ],
  "author": "Kanishk Kunal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kunruch/mmpilot/issues"
  },
  "homepage": "https://github.com/kunruch/mmpilot#readme",
  "dependencies": {
    "autoprefixer": "^6.4.1",
    "browser-sync": "^2.15.0",
    "chalk": "^1.1.3",
    "chokidar": "^1.6.0",
    "commander": "^2.9.0",
    "gh-pages": "^0.11.0",
    "glob": "^7.0.6",
    "js-yaml": "^3.6.1",
    "node-sass": "^3.9.3",
    "postcss": "^5.2.0",
    "pug": "^2.0.0-beta6",
    "shelljs": "^0.7.4",
    "sitemap": "^1.8.1",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "mmcss": "^0.2.1",
    "npm-run-all": "^3.1.0"
  }
}

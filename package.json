{
  "name": "mmpilot",
  "version": "0.1.0",
  "description": "A minimal modern static website generator",
  "main": "bin/mmpilot.js",
  "bin": {
    "mm": "bin/mmpilot.js",
    "mmpilot": "bin/mmpilot.js"
  },
  "scripts": {
    "build": "mm build -d web",
    "watch": "mm watch -d web",
    "serve": "mm serve -d web",
    "deploy": "npm run build && mm deploy -d web",
    "dev": "npm-run-all build --parallel watch serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kunruch/mmpilot.git"
  },
  "keywords": [
    "blog",
    "website",
    "cms"
  ],
  "author": "Kanishk Kunal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kunruch/mmpilot/issues"
  },
  "homepage": "https://github.com/kunruch/mmpilot#readme",
  "dependencies": {
    "autoprefixer": "^6.4.1",
    "browser-sync": "^2.15.0",
    "chalk": "^1.1.3",
    "chokidar": "^1.6.0",
    "commander": "^2.9.0",
    "glob": "^7.0.6",
    "js-yaml": "^3.6.1",
    "marko": "^3.10.0",
    "node-sass": "^3.9.3",
    "postcss": "^5.2.0",
    "shelljs": "^0.7.4",
    "sitemap": "^1.8.1",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "gh-pages": "^0.11.0",
    "npm-run-all": "^3.1.0"
  }
}
